<?xml version="1.0" encoding="utf-8" ?>
<Sheet Name="HotButtonEditMode"
	   Description="Click on an image to select it for HotButton editing."
	   Font="robotomonobold11"
	   Cursor="Normal"
	   PreferredWidth="1024"
	   PreferredHeight="768"
	   DeviceClearColor="Transparent"
	   AllowFullScreen="true">

  <!-- Background -->
  <Background
		Font="legends16"
		VisualKey="BlackTileBackground"
		IsCentered="false"
		IsTiled="true"
		TintColor="White"
		VisualAlpha="255">
	</Background>

  <!--START HotButton Edit Window-->
  <Control
		Type="HotButtonEditWindow"
		Name="HotButtonEditWindow"
		X="40"
		Y="40"
	  Width="400"
		Height="400"
		IsVisible="true"
		IsLocked="false"
		Font="courier12"
		VisualKey="WhiteSpace"
		TintColor="DarkSlateGray"
    VisualAlpha="0"
		DropShadow="false"
		ShadowDistance="5"
		ShadowDirection="Northwest"
		CursorOnDrag="Dragging"
    AnchorTop="true"
		AnchorBottom="true"
		AnchorLeft="true"
		AnchorRight="true">
  </Control>
  
  <!-- SELECTED -->
  <Control
    Type="Label"
    Name="HotButtonEditWindowSelectedIconTextLabel"
    Owner="HotButtonEditWindow"
    X="6"
    Y="19"
    Width="128"
    Height="21"
    TextColor="White"
    Text="Selected"
    IsVisible="true"
    Font="lemon12"
    TintColor="Transparent"
    VisualKey="WhiteSpace"
    VisualAlpha="0"
    BorderAlpha="255"
    TextAlpha="255"
    TextAlignment="Center"
    AnchorTop="true"
    AnchorLeft="true">
  </Control>
    
  <Control
    Type="Label"
    Name="HotButtonEditWindowSelectedIconLabel"
    Owner="HotButtonEditWindow"
    X="6"
    Y="42"
    Width="128"
    Height="128"
    TextColor="White"
    IsVisible="true"
    Font="courier12"
    TintColor="White"
    VisualKey="hotbuttonicon_0"
    VisualAlpha="255"
    BorderAlpha="255"
    TextAlpha="255"
    TextAlignment="Left"
    AnchorTop="true"
    AnchorLeft="true">
  </Control>
  
<!-- PREVIEW -->
  <Control
    Type="Label"
    Name="HotButtonEditWindowPreviewIconTextLabel"
    Owner="HotButtonEditWindow"
    X="140"
    Y="19"
    Width="128"
    Height="21"
    TextColor="White"
    Text="Preview"
    IsVisible="true"
    Font="lemon12"
    TintColor="Transparent"
    VisualKey="WhiteSpace"
    VisualAlpha="0"
    BorderAlpha="255"
    TextAlpha="255"
    TextAlignment="Center"
    AnchorTop="true"
    AnchorLeft="true">
  </Control>
    
  <Control
    Type="Label"
    Name="HotButtonEditWindowPreviewIconLabel"
    Owner="HotButtonEditWindow"
    X="140"
    Y="42"
    Width="128"
    Height="128"
    TextColor="White"
    IsVisible="true"
    Font="courier12"
    TintColor="White"
    VisualKey="hotbuttonicon_0"
    VisualAlpha="255"
    BorderAlpha="255"
    TextAlpha="255"
    TextAlignment="Left"
    AnchorTop="true"
    AnchorLeft="true">
  </Control>

  <Control
    Type="Label"
    Name="HotButtonEditWindowTextBoxLabel"
    Owner="HotButtonEditWindow"
    X="278"
    Y="22"
    Width="200"
    Height="21"
    TextColor="White"
    Text="Display Text"
    IsVisible="true"
    Font="lemon12"
    TintColor="Transparent"
    VisualKey="WhiteSpace"
    VisualAlpha="0"
    BorderAlpha="255"
    TextAlpha="255"
    TextAlignment="Left"
    AnchorTop="true"
    AnchorLeft="true">
  </Control>
  <Control
		Type="TextBox"
		Text=""
		Name="HotButtonEditWindowTextBox"
		Owner="HotButtonEditWindow"
		X="278"
		Y="42"
		Width="600"
		Height="20"
		XTextOffset="0"
		YTextOffset="0"
		TextColor="White"
		IsVisible="true"
		IsEditable="true"
		Font="courier12"
		VisualKey="WhiteSpace"
		TintColor="DimGray"
		VisualAlpha="255"
		BorderAlpha="255"
		TextAlpha="255"
		MaxLength="50"
		IsPasswordBox="false"
		HasBlinkingCursor="true"
		CursorColor="White"
    AnchorTop="true"
    AnchorLeft="true"
    TabOrder="0">
  </Control>
  <Control
		Type="SquareBorder"
		Name="HotButtonEditWindowTextBoxBorder"
		Owner="HotButtonEditWindowTextBox"
		Width="1"
		VisualKey="WhiteSpace"
    VisualAlpha="255"
		TintColor="Black">
  </Control>

  <Control
    Type="Label"
    Name="HotButtonEditWindowCommandTextBoxLabel"
    Owner="HotButtonEditWindow"
    X="278"
    Y="67"
    Width="200"
    Height="21"
    TextColor="White"
    Text="Command Text"
    IsVisible="true"
    Font="lemon12"
    TintColor="Transparent"
    VisualKey="WhiteSpace"
    VisualAlpha="0"
    BorderAlpha="255"
    TextAlpha="255"
    TextAlignment="Left"
    AnchorTop="true"
    AnchorLeft="true">
  </Control>
  <Control
      Type="TextBox"
      Text=""
      Name="HotButtonEditWindowCommandTextBox"
      Owner="HotButtonEditWindow"
      X="278"
      Y="87"
      Width="600"
      Height="20"
      XTextOffset="0"
      YTextOffset="0"
      TextColor="White"
      IsVisible="true"
      IsEditable="true"
      Font="courier12"
      VisualKey="WhiteSpace"
      TintColor="DimGray"
      VisualAlpha="255"
      BorderAlpha="255"
      TextAlpha="255"
      MaxLength="200"
      IsPasswordBox="false"
      HasBlinkingCursor="true"
      CursorColor="White"
      AnchorTop="true"
      AnchorLeft="true"
      TabOrder="1">
  </Control>
  <Control
		Type="SquareBorder"
		Name="HotButtonEditWindowTextBoxBorder"
		Owner="HotButtonEditWindowCommandTextBox"
		Width="1"
		VisualKey="WhiteSpace"
    VisualAlpha="255"
		TintColor="Black">
  </Control>

  <!-- Displays the name of the currently selected icon -->
  <Control
    Type="Label"
    Name="SelectedIconNameLabel"
    Owner="HotButtonEditWindow"
    X="278"
    Y="125"
    Width="200"
    Height="22"
    TextColor="White"
    Text=""
    IsVisible="true"
    Font="lemon12"
    TintColor="Transparent"
    VisualKey="WhiteSpace"
    VisualAlpha="0"
    BorderAlpha="255"
    TextAlpha="255"
    TextAlignment="Left"
    AnchorTop="true"
    AnchorLeft="true">
  </Control>

  <Control
		Type="Button"
		Text="Save"
		Name="HotButtonEditWindowSaveButton"
		Owner="HotButtonEditWindow"
		X="655"
		Y="122"
		Width="80"
		Height="35"
		XTextOffset="0"
		YTextOffset="0"
		TextColor="White"
		IsVisible="true"
		IsDisabled="false"
		Font="lemon14"
    VisualKey="RoundedButton"
		VisualKeyDown=""
		VisualKeyOver=""
		VisualKeyDisabled=""
    TintColor="DarkMagenta"
    TintOverColor="MediumOrchid"
    VisualAlpha="255"
		OnMouseDown="Save_Character_Settings"
		TextAlignment="Center"
		TextOverColor="Chartreuse"
    AnchorTop="true"
    AnchorLeft="true">      
    </Control>

  <Control
		Type="Button"
		Text="Cancel"
		Name="HotButtonEditWindowCancelButton"
		Owner="HotButtonEditWindow"
		X="755"
		Y="122"
		Width="100"
		Height="35"
		XTextOffset="0"
		YTextOffset="0"
		TextColor="White"
		IsVisible="true"
		IsDisabled="false"
		Font="lemon14"
    VisualKey="RoundedButton"
		VisualKeyDown=""
		VisualKeyOver=""
		VisualKeyDisabled=""
    TintColor="DarkMagenta"
    TintOverColor="MediumOrchid"
    VisualAlpha="255"
		OnMouseDown="close_window"
		TextAlignment="Center"
		TextOverColor="Chartreuse"
    AnchorTop="true"
    AnchorLeft="true">
  </Control>
</Sheet>