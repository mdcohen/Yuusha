<?xml version="1.0" encoding="utf-8" ?>
<!-- The login screen.
Mandatory Controls:
AccountTextBox
PasswordTextBox
ConnectButton
-->
<Sheet Name="Login" 
	   Description="Login Screen GUI" 
	   Font="courier16"
	   Cursor="Normal"
	   PreferredWidth="1024"
	   PreferredHeight="768"
	   DeviceClearColor="Black"
	   AllowFullScreen="true">
  
  <!-- Background Visual -->
	<Background
		Font="courier16"
		VisualKey="DragonOverIslandBackground"
		IsCentered="false"
		IsTiled="false"
		TintColor="White"
		VisualAlpha="255">
	</Background>

  <LoginWindow>
    <!-- Login Window -->
    <Control
      Type="Window"
      Name="LoginWindow"
      X="313"
      Y="165"
      Width="397"
      Height="437"
      IsVisible="true"
      IsLocked="false"
      Font="courier16"
      VisualKey="WhiteSpace"
      VisualAlpha="115"
      BorderAlpha="115"
      TintColor="Black"
      DropShadow="false"
      ShadowDistance="5"
      ShadowDirection="Northwest"
      AnchorCenter="true">
    </Control>

    <!-- Login Window Border -->
    <Control
      Type="SquareBorder"
      Name="LoginWindowBorder"
      Owner="LoginWindow"
      Width="1"
      VisualKey="WhiteSpace"
      VisualAlpha="115"
      TintColor="SlateGray">
    </Control>

    <!-- Logo -->
    <Control
      Type="Label"
      Text=""
      Owner="LoginWindow"
      Name="LogoLabel"
      X="140"
      Y="53"
      Width="115"
      Height="120"
      VisualKey="GoldDragonLogo"
      TextColor="White"
      IsVisible="true"
      Font="courier16"
      TextAlignment="Center">
    </Control>

    <!-- Account Label -->
    <Control
      Type="Label"
      Text="Account:"
      Name="AccountLabel"
      Owner="LoginWindow"
      X="114"
      Y="199"
      Width="110"
      Height="25"
      TextColor="DeepSkyBlue"
      IsVisible="true"
      Font="courier16"
      TextAlignment="Left">
    </Control>

    <!-- Account Text Box -->
    <Control
      Type="TextBox"
      Text=""
      Name="AccountTextBox"
      Owner="LoginWindow"
      X="114"
      Y="220"
      Width="172"
      Height="28"
      XTextOffset="0"
      YTextOffset="0"
      TextColor="White"
      IsVisible="true"
      IsEditable="true"
      Font="courier16"
      VisualKey="WhiteSpace"
      TintColor="Black"
      VisualAlpha="235"
      BorderAlpha="255"
      TextAlpha="255"
      MaxLength="14"
      IsPasswordBox="false"
      HasBlinkingCursor="true"
      CursorColor="White">
    </Control>

    <!-- Account TextBox Border -->
    <Control
      Type="SquareBorder"
      Name="AccountTextBoxBorder"
      Owner="AccountTextBox"
      Width="2"
      VisualKey="WhiteSpace"
      VisualAlpha="255"
      TintColor="SlateGray">
    </Control>

    <!-- Password Label -->
    <Control
      Type="Label"
      Text="Password:"
      Name="PasswordLabel"
      Owner="LoginWindow"
      X="114"
      Y="254"
      Width="110"
      Height="25"
      TextColor="DeepSkyBlue"
      IsVisible="true"
      Font="courier16"
      TextAlignment="Left">
    </Control>

    <!-- Password Text Box -->
    <Control
      Type="TextBox"
      Text=""
      Name="PasswordTextBox"
      Owner="LoginWindow"
      X="114"
      Y="275"
      Width="172"
      Height="28"
      XTextOffset="0"
      YTextOffset="0"
      TextColor="White"
      IsVisible="true"
      IsEditable="true"
      Font="courier16"
      VisualKey="WhiteSpace"
      TintColor="Black"
      VisualAlpha="235"
      BorderAlpha="255"
      TextAlpha="255"
      MaxLength="14"
      IsPasswordBox="true"
      HasBlinkingCursor="true"
