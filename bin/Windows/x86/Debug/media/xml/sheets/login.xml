      IsVisible="true"
      Font="courier16"
      TextAlignment="Left">
    </Control>

    <!-- Server Host Text Box -->
    <Control
      Type="TextBox"
      Text=""
      Name="ServerHostTextBox"
      Owner="LoginWindow"
      X="37"
      Y="330"
      Width="320"
      Height="28"
      XTextOffset="0"
      YTextOffset="0"
      TextColor="White"
      IsVisible="true"
      IsEditable="false"
      Font="courier16"
