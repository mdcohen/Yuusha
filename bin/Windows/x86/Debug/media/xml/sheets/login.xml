    <!-- Connect Button -->
    <Control
      Type="Button"
      Text="Login"
      Name="ConnectButton"
      Owner="LoginWindow"
      X="117"
      Y="380"
      Width="160"
      Height="35"
      XTextOffset="0"
      YTextOffset="5"
      TextColor="Black"
      IsVisible="false"
      IsDisabled="false"
      Font="courier16"
      VisualKey="RoundedButton"
      VisualKeyDown=""
      VisualKeyOver=""
      VisualKeyDisabled=""
      TintColor="DarkGray"
      VisualAlpha="235"
      OnMouseDown="Connect"
      TextAlignment="Center"
      TextOverColor="White">
    </Control>

    <!-- Create New Account Button -->
    <Control
      Type="Button"
      Text="Click here to create a new account."
      Name="CreateNewAccountButton"
      Owner="LoginWindow"
      X="38"
      Y="383"
      Width="320"
      Height="20"
      TextColor="White"
      IsVisible="true"
      Font="courier12"
      VisualKey="WhiteSpace"
      VisualKeyDown=""
      VisualKeyOver=""
      VisualKeyDisabled=""
      TintColor="Transparent"
      VisualAlpha="0"
      OnMouseDown="CreateNewAccount"
      TextAlignment="Center"
      TextOverColor="MediumSpringGreen">
    </Control>
